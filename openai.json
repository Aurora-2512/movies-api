{
  "openapi": "3.0.3",
  "info": {
    "title": "Movies API",
    "version": "1.0.0",
    "description": "API for accessing movie data"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/movies": {
      "get": {
        "summary": "Get all movies",
        "responses": {
          "200": {
            "description": "List of movies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Movie": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "genre": { "type": "string" },
          "year": { "type": "integer" },
          "mood": { "type": "string" }
        }
      }
    }
  }
}
