{
  "openapi": "3.0.3",
  "info": {
    "title": "Movies API",
    "version": "1.0.0",
    "description": "API for accessing movie data"
  },
  "servers": [
    {
      "url": "https://movies-api-aurora2512.onrender.com",
      "description": "Render production server"
    }
  ],
  "paths": {
    "/movies/genre/{genre}": {
  "get": {
    "summary": "Get movies by genre",
    "parameters": [
      {
        "name": "genre",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "List of movies by genre",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Movie": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "genre": { "type": "string" },
          "year": { "type": "string" },
          "mood": { "type": "string" }
        }
      }
    }
  }
}
