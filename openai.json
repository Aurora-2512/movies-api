{
  "openapi": "3.0.0",
  "info": {
    "title": "Movie Genre API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/movies/genre/{genre}": {
      "get": {
        "summary": "Get movies by genre",
        "parameters": [
          {
            "name": "genre",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of movies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": { "type": "string" },
                      "genre": { "type": "string" },
                      "year": { "type": "integer" },
                      "mood": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
